<h1 class = "text-white"><%= @cocktail.name %></h1>
<div class="row">
  <div class="col-6">
    <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= @cocktail.image_url %>" alt="Card image cap">
    <div class="card-body">
    <h5 class="card-title"><%= @cocktail.name %></h5>
    <p class="card-text">
    <%cocktail_id = @cocktail.id %>
    <%@doses = Dose.where(cocktail_id: cocktail_id) %>
    <% @doses.all.each do |dose| %>
    <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "Delete",
                          dose_path(dose),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>  <br>    
      <%end %>


            
    </div>
    </div>
  </div>

<div class="col-6">
<div class="card p-3" style="width: 18rem;">
<div class="h4">Add ingredient</div>
<%= simple_form_for [ @cocktail, @dose ] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add ", class: "btn btn-primary" %>
<% end %>

</div>
</div>


</div>

<%= link_to "Back to all cocktails",cocktails_path%>



